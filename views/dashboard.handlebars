<div class="grid gap-6 bg-blue p-8">

  {{#each projects as |project|}}

    <div class="bg-white rounded-lg shadow p-6">

      <h3 class="text-lg font-semibold mb-2 flex justify-between">  
        {{project.title}}
        <span>{{format_date project.date_created}}</span>
      </h3>

      <div class="h-1 bg-black rounded mb-4"></div>

      <p class="text-gray-700">
        {{project.description}}
        
      </p>

    </div>

    
 <button class="bg-red-500 text-white px-3 py-1 rounded">
          Delete 
        </button>

  {{/each}}
  Clink on the link to Add new Blog Post 
<a class="text-indigo-700 hover:text-gray-700 no-underline  border-blue text-blue" href="../comments">Add new Blog Post</a>
</div>


