<div class="grid gap-6 bg-blue p-8">

     
  {{#each projects as |project|}}

    <div class="bg-white rounded-lg shadow p-6">

      <h3 class="text-lg font-semibold mb-2 flex justify-between">
        <span>{{project.title}}</span>
        <span>Posted by {{project.user.name}} on {{format_date project.date_created}}</span>
      </h3>

      <div class="h-1 bg-black rounded mb-4"></div>

      <p class="text-gray-700"> 
       {{project.description}}
      </p>

    </div>
    <div> <button class="bg-green-500 text-white px-3 py-1 rounded" id="edit_Btn"  data-id="{{project.id}}">
          Comment 
          </button>
          </div>
  {{/each}}

</div>

<script src="./js/mycomments.js"></script>